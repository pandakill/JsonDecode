<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jsonString:"
        android:id="@+id/tv2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jstr_et"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tv2"
        android:layout_toEndOf="@+id/tv2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="map.toString():"
        android:id="@+id/textView"
        android:layout_below="@+id/jstr_et"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/map_et"
        android:layout_below="@+id/jstr_et"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="map.get('aaa'):"
        android:id="@+id/get_text1"
        android:layout_below="@+id/map_et"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/get_et1"
        android:layout_below="@+id/map_et"
        android:layout_alignLeft="@+id/map_et"
        android:layout_alignStart="@+id/map_et" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="((List)map.get('aaa')).get(0):"
        android:id="@+id/get_text2"
        android:layout_below="@+id/get_et1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/get_et2"
        android:layout_below="@+id/get_et1"
        android:layout_toRightOf="@+id/get_text2"
        android:layout_toEndOf="@+id/get_text2" />

</RelativeLayout>
